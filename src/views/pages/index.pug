include ../mixins/article
include ../mixins/section
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        include ../block/font-google
        link(rel="stylesheet", href="css/style.css")
        title Landing page
    body 
        include ../block/header
        main.main 
            +section("Keep track of your snippets","Clipboard instantly stores any item you copy in the cloud, meaning you can access your snippets immediately on all your devices. Our Mac and iOS apps will help you organize everything.")
                .columns.columns--two 
                    img(src="assets/images/image-computer.png", alt="computer")
                    +article("Quick Search","Easily search your snippets by content, category, web address, application, and more.") 
                    +article("iCloud Sync","Instantly saves and syncs snippets across all your devices.") 
                    +article("Complete History","Retrieve any snippets from the first moment you started using the app.") 
            +section("Access Clipboard anywhere","Whether youâ€™re on the go, or at your computer, you can access all your Clipboard snippets in a few simple clicks.")
                img(src="assets/images/image-devices.png", alt="")
                +section("Supercharge your workflow","We've got the tools to boost your productivity.")
                .columns.columns--three
                    +article("Create blacklists","Ensure sensitive information never makes its way to your clipboard by excluding certain sources.","assets/images/icon-blacklist.svg")
                    +article("Plain text snippets","Remove unwanted formatting from copied text for a consistent look.","assets/images/icon-text.svg")
                    +article("Sneak preview","Quick preview of all snippets on your Clipboard for easy access.","assets/images/icon-preview.svg")
            .icon-list 
                img(src="assets/images/logo-google.png", alt="")
                img(src="assets/images/logo-ibm.png", alt="")
                img(src="assets/images/logo-microsoft.png", alt="")
                img(src="assets/images/logo-hp.png", alt="")
                img(src="assets/images/logo-vector-graphics.png", alt="")
            +section("Clipboard for iOS and Mac OS","Available for free on the App Store. Download for Mac or iOS, sync with iCloud and you´re ready to start adding to your clipboard.")
                a(href="#").buttom.buttom--green Download for iOS
                a(href="#").buttom.buttom--purple Download for Mac 
    footer.footer 
        img(src="assets/images/logo.svg", alt="")
        ul.footer__links 
            li.footer__item 
                a(href="#").footer__link FAQs 
                a(href="#").footer__link Contact Us
                a(href="#").footer__link Privarcy Policy
                a(href="#").footer__link Press Kit
                a(href="#").footer__link Install Guide 
        .footer__social 
            img(src="assets/images/icon-facebook.svg", alt="")
